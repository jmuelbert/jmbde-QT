[general]
verbosity=2
ignore-merge-commits=true
ignore-revert-commits=true
ignore-squash-commits=true
ignore-fixup-commits=true
ignore-stdin=true
ignore=body-is-missing

[title-max-length]
line-length=80
[title-min-length]
min-length=10

[title-must-not-contain-word]
words=

[title-match-regex]
regex=^\[(wip|dev|test|doc|fix|feat|style|refact|error)\]\s[A-Z].*$

[ignore-by-title]
regex=^Release(.*)

[body-max-line-length]
line-length=512
[body-min-length]
min-length=10

[author-valid-email]
regex=[^@]+@gmail.com
